{% extends 'ui/base.html.twig' %}

{% block body %}

    <section class="orders spad">
        <div class="container">
            <table class="table">
                <thead>
                <tr>
                    <th>Client</th>
                    <th>Number</th>
                    <th>Status</th>
                    <th>Cr√©ation</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                    <tr>
                        <td>
                            {{ order.customer.fullName }}
                        </td>
                        <td>
                            {{ order.number }}
                        </td>
                        <td>
                            {{ order.state }}
                        </td>
                        <td>{{ order.createdAt|date('d/m/Y H:i:s') }}</td>
                        <td class="d-flex">
                            <a href="{{ path('ui_account_order_view', {id: order.id}) }}" class="btn btn-sm btn-rounded btn-primary mr-2">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </section>

{% endblock %}
