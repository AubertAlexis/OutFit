{% extends 'ui/base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="row my-5">
            <div class="col-6 offset-3">

                <h2 class="text-center">Connexion à votre compte</h2>

                <hr class="mt-3 mb-4">

                <p class="text-center">En vous connectant, vous allez avoir accès à vos informations personnelles, la prise de commande sera également possible afin de reçevoir votre produit chez vous</p>

                <hr class="mt-4 mb-5">

                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <form action="{{ path('login') }}" method="post" class="text-center">
                    <div class="form-group">
                        <div>
                            <label for="" class="d-inline-block">E-mail</label>
                        </div>
                        <input type="text" class="form-group" id="username" name="_username" placeholder="Adresse e-mail" value="{{ last_username }}"/>
                    </div>

                    <div class="form-group">
                        <div>
                            <label for="" class="d-inline-block">Mot de passe</label>
                        </div>
                        <input type="password" class="form-group" id="password" placeholder="Mot de passe" name="_password"/>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Se connecter</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
