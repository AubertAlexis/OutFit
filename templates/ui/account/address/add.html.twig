{% extends 'ui/base.html.twig' %}

{% block body %}

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-lg-6 offset-3">

                        <div class="row mb-3">
                            <div class="col-lg-12">
                                {{ form_label(form.type) }}
                                <div class="checkout__input">
                                    {{ form_widget(form.type) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3">
                                {{ form_label(form.number) }}
                                <div class="checkout__input">
                                    {{ form_widget(form.number) }}
                                </div>
                            </div>
                            <div class="col-lg-9">
                                {{ form_label(form.street) }}
                                <div class="checkout__input">
                                    {{ form_widget(form.street) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6">
                                {{ form_label(form.zip) }}
                                <div class="checkout__input">
                                    {{ form_widget(form.zip) }}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                {{ form_label(form.city) }}
                                <div class="checkout__input">
                                    {{ form_widget(form.city) }}
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-lg-6">
                                {{ form_label(form.selected) }}
                                <div>
                                    {{ form_widget(form.selected) }}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm">
                                <button type="submit" class="btn btn-rounded btn-primary">
                                    Enregistrer
                                </button>
                            </div>
                        </div>


                        {{ form_row(form._token) }}

                        {{ form_end(form) }}
                    </div>
                </div>


            </div>
        </div>
    </section>
    <!-- Checkout Section End -->

{% endblock %}
