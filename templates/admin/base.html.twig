<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block title %}{% endblock %} - Administration</title>

        <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link
                href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
                rel="stylesheet">

        {% if datatable is defined and datatable == true %}
            <link href="/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
        {% endif %}

        {{ encore_entry_link_tags('admin_theme') }}

        {% block stylesheets %}{% endblock %}
    </head>
    <body id="page-top">
        <div id="wrapper">
            {% include 'admin/components/_sidebar.html.twig' %}

            <div id="content-wrapper" class="d-flex flex-column">

                <div id="content">

                    {% include 'admin/components/_topbar.html.twig' %}

                    <div class="container-fluid">

                        {% for type, messages in app.flashes %}
                            <div class="container">
                                <div class="alert alert-{{ type }}">
                                    {% for message in messages %}
                                        <p class="mb-0">{{ message | raw }}</p>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}

                        {% block body %}{% endblock %}

                    </div>

                </div>

                {% include 'admin/components/_footer.html.twig' %}
            </div>

        </div>

        {% include 'admin/components/_scroll_to_top.html.twig' %}
        {% include 'admin/components/modals/_logout.html.twig' %}

        <script src="/vendor/jquery/jquery.min.js"></script>
        <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

        {% if datatable is defined and datatable == true %}
            <script src="/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="/vendor/datatables/dataTables.bootstrap4.min.js"></script>
        {% endif %}

        {{ encore_entry_script_tags('admin_theme') }}

        {% block javascripts %}{% endblock %}
    </body>
</html>
