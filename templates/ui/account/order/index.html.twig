{% extends 'ui/base.html.twig' %}

{% block body %}
    <div class="container my-5">
        <div class="row my-5">
            <div class="col-12">
                <h2 class="text-center">Vos commandes</h2>
                <hr class="my-3">
            </div>
            <div class="col-12">
                <section class="orders mt-3">
                    <div class="container">
                        <table class="table">
                            <thead>
                            <th>N°</th>
                            <th>Status</th>
                            <th>Total</th>
                            <th>Date</th>
                            </thead>
                            <tbody>
                            {% for order in orders %}
                                {% if order.state != 'cart' %}
                                    <tr>
                                        <td>{{ order.number }}</td>
                                        <td><span class="badge badge-success">{{ order.getStatusName(order.state) }}</span></td>
                                        <td>{{ order.total }}€</td>
                                        <td>{{ order.createdAt|date('d/m/Y') }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>

{% endblock %}
