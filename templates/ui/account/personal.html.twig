{% extends 'ui/base.html.twig' %}

{% block body %}

    <!-- Checkout Section Begin -->
    <section class="checkout spad">
        <div class="container">
            <div class="checkout__form">
                {{ form_start(form) }}
                    <div class="row">
                        <div class="col-lg-8 col-md-6">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        {{ form_row(form.firstName) }}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        {{ form_row(form.lastName) }}
                                    </div>
                                </div>
                            </div>
                            <div class="checkout__input">
                                <p>Country<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="checkout__input">
                                <p>Address<span>*</span></p>
                                <input type="text" placeholder="Street Address" class="checkout__input__add">
                                <input type="text" placeholder="Apartment, suite, unite ect (optinal)">
                            </div>
                            <div class="checkout__input">
                                <p>Town/City<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="checkout__input">
                                <p>Country/State<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="checkout__input">
                                <p>Postcode / ZIP<span>*</span></p>
                                <input type="text">
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        {{ form_row(form.phone) }}
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="checkout__input">
                                        {{ form_row(form.user.email) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {% for addresse in customer.addresses %}
                        <p>Oui</p>
                    {% else %}
                        <div class="row">
                            <p>Il n'y a aucune adresse d'enregistrer. Pour en creer une, cliquez sur le bouton.</p>
                        </div>
                        <div class="row">
                            <a href="" class="btn btn-primary">Ajouter une adresse</a>
                        </div>
                    {% endfor %}

                    <div class="row">
                        <div class="col-sm">
                            <button type="submit" class="btn btn-sm btn-rounded btn-primary">
                                Enregistrer
                            </button>
                        </div>
                    </div>


                    {{ form_row(form._token) }}
                {{ form_end(form, {render_rest: false}) }}
            </div>
        </div>
    </section>
    <!-- Checkout Section End -->


{% endblock %}
